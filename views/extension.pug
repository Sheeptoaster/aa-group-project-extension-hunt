extends layout

include utils.pug

block content
	script(src="/javascripts/apiComments.js" type="module")
	div
		h1= name
		p= description
		img(src= iconURL)
	div
		form(action="")#add-comment-form
			input(type="hidden" name="_csrf" value=csrfToken)#csrfToken
			input(type="hidden" name="extensionId" value=extensionId)
			input(type="hidden" name="userId" value=userId)
			+field('', 'content', "", 'form-group', 'form-control', "text", "What do you think of this extension?")
			button(type="submit")#create-comment SEND
		ul#content-container
			each comment in comments
				li: div= comment.content
